{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "passThroughEnv": ["LOG_LEVEL"]
    },
    "types": {
      "dependsOn": ["^types"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "passThroughEnv": ["LOG_LEVEL"],
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
